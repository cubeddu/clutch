#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use Clutch\Command;
use Symfony\Component\Console\Application;

$application = new Application('
   ___   __       _____  ___
  / __\ / / /\ /\/__   \/ __\ /\  /\
 / /   / / / / \ \ / /\/ /   / /_/ /
/ /___/ /__\ \_/ // / / /___/ __  /
\____/\____/\___/ \/  \____/\/ /_/

Cliph', '@package_version@');

$application->add(new Command\CreateCommand());
